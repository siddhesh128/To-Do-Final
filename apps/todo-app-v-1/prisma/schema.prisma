datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime  @default(now())
  email     String?   @unique
  firstName String?
  id        String    @id @default(cuid())
  lastName  String?
  password  String
  projects  Project[]
  roles     Json
  updatedAt DateTime  @updatedAt
  username  String    @unique
}

model ToDo {
  createdAt   DateTime  @default(now())
  description String?
  id          String    @id @default(cuid())
  image       Json?
  reminder    DateTime?
  title       String?
  updatedAt   DateTime  @updatedAt
}

model Page {
  components Component[]
  createdAt  DateTime    @default(now())
  id         String      @id @default(cuid())
  project    Project?    @relation(fields: [projectId], references: [id])
  projectId  String?
  updatedAt  DateTime    @updatedAt
}

model Component {
  createdAt DateTime  @default(now())
  elements  Element[]
  id        String    @id @default(cuid())
  page      Page?     @relation(fields: [pageId], references: [id])
  pageId    String?
  updatedAt DateTime  @updatedAt
}

model Project {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  pages     Page[]
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Element {
  component   Component? @relation(fields: [componentId], references: [id])
  componentId String?
  createdAt   DateTime   @default(now())
  id          String     @id @default(cuid())
  updatedAt   DateTime   @updatedAt
}
